<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mobeye.Page1"
              BackgroundColor="{StaticResource page_background}">
    <ContentPage.Content>
        <StackLayout>
            <Image Source="mobeyelogo.png" Margin="0,10,0,25"/>

            <Button
                Text="Go to our Website" Clicked="Button_Clicked" Margin="80,0" VerticalOptions="CenterAndExpand" HorizontalOptions="Center" BackgroundColor="{StaticResource button_background}" TextColor="{StaticResource button_text}" />
            <Button
                Text="View my Devices" Clicked="ShowCallKeyPage_Clicked" Margin="80,0" VerticalOptions="CenterAndExpand" HorizontalOptions="Center" BackgroundColor="{StaticResource button_background}" TextColor="{StaticResource button_text}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>