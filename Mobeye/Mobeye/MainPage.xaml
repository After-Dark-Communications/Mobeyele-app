<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mobeye.MainPage">

    <StackLayout VerticalOptions="CenterAndExpand">
        <Image Source="mobeyelogo.png" Margin="0,0,0,25" />
        <Button Text="Log in With Portal Account." Margin="50,0" Clicked="OnPortalLoginClick"/>
        <Label Text="OR" HorizontalTextAlignment="Center"/>
        <Button Text="Log in As Contact Person." Margin="50,0" Clicked="OnContactPersonLogin"/>
    </StackLayout>
</ContentPage>
